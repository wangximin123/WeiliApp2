<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShishijiankongActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#088010"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TV_goBcak"
            android:text="《首页"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="实时监控"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>
    <com.example.wxm.weiliapp2.Utils.MySelect
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.wxm.weiliapp2.Utils.MySelect>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d6cdcd"
        android:gravity="center">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#088010"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TV_showAll"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="显示全部"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TV_showNoNormal"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="仅显示异常"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TV_showOutLine"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="仅显示离线"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </LinearLayout>


</LinearLayout>