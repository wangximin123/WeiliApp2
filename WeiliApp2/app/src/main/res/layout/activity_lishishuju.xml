<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LishishujuActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#088010"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TV_goBcak"
            android:text="《首页"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="历史数据"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>
<com.example.wxm.weiliapp2.Utils.MySelect
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</com.example.wxm.weiliapp2.Utils.MySelect>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e6e3e3"
        android:orientation="vertical">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/Lishishuju_lineChart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"></com.github.mikephil.charting.charts.LineChart>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:background="#088010"
                android:text="数据统计"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="打印"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#088010"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ET_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="起始时间(xxxx-xx-xx)"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:text="到"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#088010"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/ET_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="到达时间(xxxx-xx-xx)"/>
        <TextView
            android:id="@+id/TV_commit"
            android:padding="1dp"
            android:text="确定"
            android:background="#088010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>